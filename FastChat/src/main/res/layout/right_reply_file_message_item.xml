<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="end"
    android:animateLayoutChanges="true">


    <RelativeLayout
        android:id="@+id/rl_message"
        android:animateLayoutChanges="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/cv_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/RelativeLayout17"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/cc_message_bubble_left"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="1dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/go_txt_message"
                    android:padding="5dp"
                  >

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:text=" Photo"
                        android:visibility="visible"
                        android:id="@+id/resend_type"
                        android:gravity="center"
                        android:layout_marginTop="5dp" />

                    <FrameLayout
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        >
                        <com.fastchat.widget.AudioVisualizer.audio.AudioWaveSeekBar
                        android:id="@+id/seekBar"
                        android:padding="8dp"
                            android:visibility="visible"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="4dp"
                        android:layout_height="30dp"
                        />

                        <ImageView
                             android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/resend_image"
                            />

                    </FrameLayout>
                </LinearLayout>


                <FrameLayout
                     android:background="@drawable/cc_message_bubble_right"
                    android:layout_below="@+id/go_txt_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:gravity="center"
                        android:layout_gravity="bottom|center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/reply_txt_message"
                            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginEnd="10dp"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:padding="10dp"
                            android:textColor="@color/textColorWhite"
                            android:maxWidth="250dp"
                            tools:text="ثتنيبىت" />
                        <RelativeLayout
                            android:id="@+id/RelativeLayout_Reaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/reply_txt_message"
                            android:layout_gravity="bottom|start"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                             android:layout_marginBottom="5dp"
                            android:gravity="start"
                            >

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/RecyclerView_Reaction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_reactions"
                                android:orientation="horizontal"
                                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                tools:itemCount="1"
                                tools:listitem="@layout/sb_view_emoji_reaction_component" />

                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                         android:gravity="center"
                        android:background="@drawable/shape_black_line"
                        android:layout_gravity="bottom|start"
                        android:layout_width="30dp"
                        android:layout_height="25dp">
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_width="15dp"
                            android:id="@+id/Reaction"
                            android:layout_margin="5dp"
                            tools:src="@drawable/ic_fb_love"
                            android:layout_height="15dp"/>
                    </RelativeLayout>
                </FrameLayout>

            </RelativeLayout>



        </RelativeLayout>



        <LinearLayout
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_alignEnd="@+id/cv_message_container"
            android:layout_below="@+id/cv_message_container"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal"
                android:id="@+id/reply_avatar_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:id="@+id/thread_reply_count"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                tools:text="2 replies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_time"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="11:00 PM"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"
            android:textColor="@color/secondaryTextColor"
            android:layout_alignBottom="@+id/cv_message_container"
            android:layout_toLeftOf="@+id/cv_message_container"
            android:textStyle="bold"
            tools:visibility="visible"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>
