<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/rl_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.fastchat.widget.Avatar
            android:layout_width="24dp"
            android:id="@+id/iv_user"
            tools:src="@tools:sample/avatars"
            android:layout_alignBottom="@id/cv_message_container"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_height="24dp"/>
        <TextView
            android:id="@+id/tv_user"
            tools:text="Iron Man"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/iv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <FrameLayout
            android:layout_below="@+id/tv_user"
            android:id="@+id/cv_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_user"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/cc_message_bubble_left"
            android:layout_marginStart="4dp"
            android:padding="8dp"
            android:layout_marginBottom="1dp">
            <TextView
                android:layout_toRightOf="@+id/file_type_layout"
                android:id="@+id/tvFileName"
                android:layout_width="wrap_content"
                tools:text="File Name"
                android:textColor="@color/primaryTextColor"
                android:focusable="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLength="15"
                android:paddingTop="3dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:maxWidth="250dp"
                android:focusableInTouchMode="true"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignEnd="@+id/tvFileName"
                android:layout_below="@+id/tvFileName"
                android:id="@+id/tvFileSize"
                tools:text="10MB"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@drawable/cc_rounded_date_button"
                android:gravity="center_horizontal"
                android:id="@+id/file_type_layout"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.app.adprogressbarlib.AdCircleProgress
                    android:layout_alignParentEnd="true"
                    android:id="@+id/img_progress_bar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    app:adpgb_background_color="@android:color/background_light"
                    app:adpgb_finished_color="@android:color/white"
                    app:adpgb_unfinished_color="@android:color/holo_red_light"
                    custom:adpgb_finished_stroke_width="5dp"
                    app:adpgb_text_size="9sp"
                    custom:adpgb_show_text="true"
                    app:adpgb_text_color="@android:color/holo_red_light"
                    custom:adpgb_unfinished_stroke_width="5dp" />



                <ImageView
                    android:id="@+id/ivIcon"
                    android:src="@drawable/ic_insert_drive_file_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:tint="@color/primaryTextColor" />
                <TextView
                    android:id="@+id/tvFileExtension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="PDF"
                    android:textStyle="bold"
                    android:textSize="8sp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/primaryTextColor"
                    android:visibility="visible" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/cv_message_container"
            android:layout_alignStart="@+id/cv_message_container"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:orientation="horizontal"
                android:id="@+id/reply_avatar_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:id="@+id/thread_reply_count"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                tools:text="2 replies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="11:00 PM"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"
            android:layout_alignBottom="@id/cv_message_container"
            android:layout_gravity="center"
            android:layout_toRightOf="@id/cv_message_container"
            android:textColor="@color/secondaryTextColor"
            android:textStyle="bold"
            tools:visibility="visible"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
