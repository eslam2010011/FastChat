<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/textColorWhite">

    <RelativeLayout
        android:id="@+id/rlActionContainers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:animateLayoutChanges="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivAudio"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/ivAudio"
            android:visibility="gone" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/rlActionContainers"
        android:padding="8dp"
        android:src="@drawable/ic_add_circle_grey_32dp"
        android:visibility="gone" />


    <androidx.cardview.widget.CardView
        android:id="@+id/flBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        android:layout_toStartOf="@+id/boxEndLayout"
        android:layout_toEndOf="@id/ivArrow"
        android:elevation="0dp"
        android:gravity="center_vertical"
        android:translationZ="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_resend_root_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                 android:layout_marginEnd="10dp"
                android:background="@drawable/shape_black_line_reply"
                android:orientation="vertical"
                android:padding="5dp"
               >
                <com.fastchat.widget.richlinkpreview.RichLinkView
                    android:id="@+id/richLink"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    />
                <TextView
                    android:visibility="invisible"
                    android:textColor="@color/textColorBlack"
                    android:id="@+id/tv_resend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textStyle="bold" />

                <TextView
                     android:id="@+id/resend_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_resend_name"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text=" Photo"
                    android:textColor="@color/textColorBlack"
                    android:visibility="gone" />

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:id="@+id/resend_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/resend_clear_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:background="@drawable/shape_black_line_reply"
                        android:src="@drawable/ic_delete_24dp" />
                </FrameLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewEmoji"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="2dp"
                    android:padding="8dp"
                    android:src="@drawable/emoji_ic" />

                <com.vanniktech.emoji.EmojiEditText
                    android:id="@+id/etComposeBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@null"
                    android:ems="10"
                     android:textColor="@color/textColorBlack"
                    android:hint="@string/type_a_message"
                    android:inputType="textMultiLine"
                    android:maxLines="6"
                    android:paddingStart="4dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="8dp" />

                <ImageView
                    android:id="@+id/ivFile"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="2dp"
                    android:padding="8dp"
                    android:src="@drawable/attachment_ic"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/ivImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="8dp"
                    android:padding="8dp"
                    android:src="@drawable/camera_ic" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/voiceMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/boxEndLayout"
        android:layout_toStartOf="@+id/boxEndLayout"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/record_time"
            android:padding="8dp"
            android:src="@drawable/ic_delete_24dp"
            android:visibility="gone"
            tools:visibility="visible" />

        <SeekBar
            android:id="@+id/voice_message_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/record_time"
            android:layout_toEndOf="@+id/ivDelete"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.fastchat.widget.AudioVisualizer.AudioRecordView
            android:id="@+id/record_audio_visualizer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toEndOf="@+id/ivDelete"
            app:chunkAlignTo="bottom"
            app:chunkColor="@color/colorPrimary"
            app:chunkMaxHeight="150dp"
            app:chunkMinHeight="1dp"
            app:chunkSpace="1dp"
            app:chunkWidth="2dp"
            tools:visibility="visible" />

        <Chronometer
            android:id="@+id/record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/ivDelete"
            android:elevation="8dp"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/boxEndLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageViewAudio"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:visibility="visible"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="22dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            app:contentPadding="0dp">

            <ImageView
                android:id="@+id/ivMic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:src="@drawable/ic_record_audio_ic" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/imageViewSend"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="6dp"
            android:background="#FFFFFF"
            android:clickable="true"
            android:elevation="2dp"
            android:translationZ="2dp"
            android:visibility="gone"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="22dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            app:contentPadding="0dp">

            <ImageView
                android:id="@+id/ivSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_send_msg_ic" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</RelativeLayout>