<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:clickable="true"
        android:background="@color/textColorWhite"
        android:layout_width="match_parent"
        android:layout_height="80dp">
            <RelativeLayout
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/conversationView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.fastchat.widget.Avatar
                    android:id="@+id/av_user"
                    android:layout_width="60dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    tools:src="@tools:sample/avatars"
                    android:layout_height="60dp" />
                <com.fastchat.widget.StatusIndicator
                    android:layout_width="16dp"
                    android:visibility="gone"
                     android:layout_alignEnd="@+id/av_user"
                    android:layout_alignBottom="@+id/av_user"
                    android:id="@+id/user_status"
                    android:layout_height="16dp"/>
                <TextView
                    android:ellipsize="end"
                    android:id="@+id/txt_user_name"
                    android:layout_width="match_parent"
                    android:layout_alignTop="@id/av_user"
                    android:layout_toStartOf="@+id/messageTime"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/av_user"
                    android:layout_height="wrap_content"
                    tools:text="@tools:sample/full_names"
                    android:textColor="@color/textColorBlack"
                    android:layout_marginEnd="16dp"
                    android:textSize="@dimen/name"
                    android:maxLines="1"
                    android:textStyle="bold" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/txt_user_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:textSize="@dimen/fourteen"
                    android:layout_marginStart="8dp"
                    android:layout_below="@id/txt_user_name"
                    android:layout_toEndOf="@id/av_user"
                    android:maxLines="1"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_marginRight="8dp"
                    android:layout_toStartOf="@+id/messageTime"
                    tools:text="online"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tvSeprator"
                    android:layout_width="match_parent"
                    android:layout_toEndOf="@id/av_user"
                    android:background="@color/light_grey"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="16dp"
                    android:layout_height="0.8dp"/>

                <TextView
                    android:visibility="visible"
                    tools:visibility="visible"
                    android:id="@+id/messageTime"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:textSize="12sp"
                    android:layout_alignTop="@id/txt_user_name"
                    tools:text="11:50"
                    android:textColor="@color/secondaryTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.fastchat.widget.BadgeCount
                        tools:visibility="visible"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/messageTime"
                        android:id="@+id/messageCount"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="4dp"
                         android:textColor="@color/textColorWhite"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

