        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/control_toggle"
            android:id="@+id/paddedLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ProgressBar
                android:visibility="gone"
                android:clickable="true"
                android:id="@+id/pb_play"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:focusable="true" />

            <LinearLayout
                  android:id="@+id/containerLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.fastchat.widget.AudioVisualizer.audio.AudioWaveSeekBar
                    android:id="@+id/seekBar"
                    android:padding="8dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                     android:layout_marginEnd="4dp"
                    android:layout_height="30dp"
                    />

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/RelativeLayout_Reaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_below="@+id/reply_txt_message"
                      android:gravity="start"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/RecyclerView_Reaction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_reactions"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        tools:itemCount="1"
                        tools:listitem="@layout/sb_view_emoji_reaction_component" />

                </RelativeLayout>

            </LinearLayout>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/progressBar"
                android:visibility="gone"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            android:text="00:00:00 / 00:00:00"
            android:layout_marginRight="16dp" />


        <com.fastchat.widget.AudioVisualizer.audio.AnimatingToggle
            android:id="@+id/control_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:visibility="gone"
                android:padding="8dp"
                android:id="@+id/pause"
                android:background="@drawable/ic_circle_grey_32dp"
                android:src="@drawable/ic_pause_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:padding="8dp"
                android:id="@+id/playBtn"
                android:backgroundTint="@color/textColorWhite"
                android:background="@drawable/ic_circle_grey_32dp"
                android:src="@drawable/ic_play_arrow_black_24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorPrimary" />
        </com.fastchat.widget.AudioVisualizer.audio.AnimatingToggle>


        <com.app.adprogressbarlib.AdCircleProgress
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/img_progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:adpgb_background_color="@android:color/background_light"
            android:backgroundTintMode="add"
            app:adpgb_finished_color="@android:color/white"
            app:adpgb_unfinished_color="@android:color/holo_red_light"
            custom:adpgb_finished_stroke_width="5dp"
            app:adpgb_text_size="9sp"
            custom:adpgb_show_text="true"
            app:adpgb_text_color="@android:color/holo_red_light"
            custom:adpgb_unfinished_stroke_width="5dp" />
        <TextView
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTime"
            android:padding="1dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:textSize="10sp"
            android:text="00:00:00 / 00:00:00"
            android:layout_marginRight="16dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_below="@+id/cv_message_container"
        android:layout_alignEnd="@+id/cv_message_container"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal"
            android:id="@+id/reply_avatar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:clickable="true"
            android:foreground="?selectableItemBackground"
            android:id="@+id/thread_reply_count"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            tools:text="2 replies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_below="@+id/cv_message_container"
        android:layout_alignEnd="@+id/cv_message_container"
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="11:00 PM"
        android:textSize="12sp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
         android:layout_gravity="center"
        android:layout_toLeftOf="@id/cv_message_container"
        android:textColor="@color/secondaryTextColor"
        android:textStyle="bold"
        tools:visibility="visible"
        android:visibility="visible" />


    <RelativeLayout
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/cv_message_container"
         android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_black_line"
        android:layout_gravity="bottom|start"
        android:layout_width="30dp"
        android:layout_height="25dp">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="15dp"
            android:id="@+id/Reaction"
            android:layout_margin="5dp"
            tools:src="@drawable/ic_fb_love"
            android:layout_height="15dp"/>
    </RelativeLayout>
</RelativeLayout>